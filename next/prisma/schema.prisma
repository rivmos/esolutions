generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CaseStudy {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String?
  description String?
  content     String?
}

model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  username      String @unique
  email         String @unique
  hashedPassword String?
}