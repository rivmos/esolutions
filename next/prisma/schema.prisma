generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CaseStudy {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String?
  description String?
  content     String
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  username       String  @unique
  email          String  @unique
  hashedPassword String?
}

model Enquiry {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  first   String
  last    String?
  email   String
  mobile  String
  message String
}

model Service {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  image       String
  href        String
  // tags          String[]   
  tagIds      String[] @db.ObjectId
  tags        Tag[]    @relation(fields: [tagIds], references: [id])
  isActive    Boolean  @default(true)
}

model Tag {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  serviceIds String[]  @db.ObjectId
  services   Service[] @relation(fields: [serviceIds], references: [id])
}

model Testimonial {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  position String?
  message  String
}

model Subscriber {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
}

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String?
  description String?
  content     String
  createdAt   DateTime @default(now())
  lastUpdated DateTime @updatedAt
}

model BannerSlide {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  heading    String
  subheading String
  ctaText    String
  ctaHref    String
  image      String
}
