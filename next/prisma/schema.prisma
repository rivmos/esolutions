generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CaseStudy {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String?
  description String?
  content     String
}

model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  username      String @unique
  email         String @unique
  hashedPassword String?
}

model Enquiry {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  first   String
  last    String?
  email   String
  mobile  String
  message String
}

model Service {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  image         String
  tags          String[]   
  isActive      Boolean    @default(true)
}